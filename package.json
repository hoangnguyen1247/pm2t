{
    "name": "pm2t",
    "preferGlobal": true,
    "version": "4.5.20",
    "engines": {
        "node": ">=8.10.0"
    },
    "directories": {
        "bin": "./bin",
        "lib": "./lib",
        "example": "./examples"
    },
    "author": {
        "name": "Strzelewicz Alexandre",
        "email": "alexandre@pm2.io",
        "url": "https://pm2.io"
    },
    "maintainers": [
        {
            "name": "Ho√†ng Ng.",
            "email": "hoang.nguyen1247@gmail.com"
        }
    ],
    "contributors": [],
    "homepage": "https://github.com/hoangnguyen1247/pm2t",
    "description": "Production process manager for Node.JS applications with a built-in load balancer.",
    "main": "index.js",
    "types": "types/index.d.ts",
    "scripts": {
        "clean:build": "rimraf lib",
        "start": "node -r ts-node/register ./src/binaries/CLI.ts",
        "start:bin": "node ./bin/pm2t",
        "start:ts": "ts-node ./src/binaries/CLI",
        "dev": "ts-node ./src/binaries/CLI",
        "debug": "node inspect -r ts-node/register ./src/binaries/CLI",
        "dev0": "node ./lib/binaries/CLI",
        "format": "eslint . --ext ts --ext js --fix",
        "lint": "eslint . --ext ts --ext js",
        "type-check": "tsc -p tsconfig.types.json --noEmit",
        "build:lib": "babel src --out-dir lib --extensions \".js,.ts,.tsx\"",
        "build": "npm run clean:build && npm run build:lib && npm run copy:src",
        "copy:src": "node ./CopyNonTsFiles.js",
        "release": "semantic-release",
        "test": "bash test/unit.sh && bash test/e2e.sh"
    },
    "keywords": [
        "pm2t"
    ],
    "bin": {
        "pm2t": "./bin/pm2t",
        "pm2t-dev": "./bin/pm2t-dev",
        "pm2t-docker": "./bin/pm2t-docker",
        "pm2t-runtime": "./bin/pm2t-runtime"
    },
    "dependencies": {
        "@babel/runtime": "^7.11.2",
        "@pm2/js-api": "~0.6.0",
        "@pm2/pm2-version-check": "latest",
        "async": "~3.2.0",
        "blessed": "0.1.81",
        "chalk": "3.0.0",
        "chokidar": "^3.3.0",
        "cli-tableau": "^2.0.0",
        "commander": "5.1.0",
        "cron": "1.8.2",
        "dayjs": "~1.8.25",
        "debug": "^4.2.0",
        "enquirer": "2.3.6",
        "eventemitter2": "5.0.1",
        "fclone": "1.0.11",
        "mkdirp": "1.0.4",
        "moment": "^2.29.1",
        "needle": "2.4.0",
        "pidusage": "2.0.21",
        "pm2-axon": "4.0.0",
        "pm2-axon-rpc": "0.6.0",
        "pm2-deploy": "~1.0.2",
        "pm2-multimeter": "^0.1.2",
        "pm2t-deploy": "~1.0.3",
        "pm2t-io-agent": "~1.0.4",
        "pm2t-io-apm": "~4.3.5",
        "promptly": "^2",
        "ps-list": "6.3.0",
        "rimraf": "^3.0.2",
        "semver": "^7.2",
        "source-map-support": "0.5.19",
        "sprintf-js": "1.1.2",
        "tv4": "^1.3.0",
        "vizion": "0.2.13",
        "yamljs": "0.3.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.11.6",
        "@babel/core": "^7.11.6",
        "@babel/plugin-transform-runtime": "^7.11.5",
        "@babel/preset-env": "^7.11.5",
        "@babel/preset-typescript": "^7.10.4",
        "@semantic-release/exec": "^6.0.1",
        "@semantic-release/gitlab": "^7.0.3",
        "@semantic-release/npm": "^8.0.0",
        "@types/node": "^14.11.8",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "babel-plugin-module-resolver": "^4.0.0",
        "copy-dir": "^1.3.0",
        "eslint": "^8.0.1",
        "mocha": "^7.1.0",
        "semantic-release": "^18.0.0",
        "should": "^13",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.3"
    },
    "optionalDependencies": {
        "systeminformation": "^4.23.3"
    },
    "bugs": {
        "url": "https://github.com/hoangnguyen1247/pm2t/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hoangnguyen1247/pm2t.git"
    },
    "license": "MIT"
}
